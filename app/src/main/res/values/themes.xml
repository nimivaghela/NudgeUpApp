<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ColltDemoApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:windowIsTranslucent">true</item>

    </style>

    <style name="Theme.ColltDemoApp" parent="Base.Theme.ColltDemoApp" />

    <style name="Theme.RemoveSplashScreenTheme" parent="@style/Theme.ColltDemoApp">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="ScreenStyleBg">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="TextViewRegularStyle">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/white_70</item>
    </style>

    <style name="TextViewBoldStyle">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyDatePicker" parent="ThemeOverlay.AppCompat.Dialog">
        <!--header background-->
        <item name="colorAccent">#000000</item>
        <!--header textcolor-->
        <item name="android:textColorPrimaryInverse">#ffffff</item>
        <!--body background-->
        <item name="android:windowBackground">#000000</item>
        <!--selected day-->
        <item name="android:colorControlActivated">#000000</item>
        <!--days of the month-->
        <item name="android:textColorPrimary">#000000</item>
        <!--days of the week-->
        <item name="android:textColorSecondary">#000000</item>
        <!--cancel&ok-->
        <item name="android:textColor">#00ffff</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/colorPrimaryAlpha</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>