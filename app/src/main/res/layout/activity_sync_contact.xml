<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        tools:context=".ui.auth.sync_contact.SyncContactActivity">

        <include
            android:id="@+id/mToolbar"
            layout="@layout/item_toolbar" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvInfoOne"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="80dp"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center_horizontal"
            android:text="@string/find_your_friends_on_nudge_up"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mToolbar" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/lblInfoTwo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="80dp"
            android:gravity="center_horizontal"
            android:text="@string/allow_access_to_your_phone"
            android:textColor="@color/white"
            android:textSize="12dp"
            app:fontFamily="@font/poppins_regular"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvInfoOne" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivWelcomeLogo"
            android:layout_width="300dp"
            android:layout_height="340dp"
            android:src="@drawable/allow_contact"
            app:layout_constraintBottom_toTopOf="@id/btnFindMyFriend"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lblInfoTwo" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btnFindMyFriend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="80dp"
            android:background="@drawable/bg_button_white"
            android:gravity="center_horizontal"
            android:paddingStart="14dp"
            android:paddingTop="10dp"
            android:paddingEnd="14dp"
            android:paddingBottom="10dp"
            android:text="@string/find_my_friends"
            android:textColor="@color/colorPrimary"
            android:textSize="16dp"
            app:fontFamily="@font/poppins_bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>